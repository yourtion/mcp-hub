{
  "name": "@mcp-core/mcp-hub-core",
  "version": "1.0.0",
  "description": "MCP Hub核心包 - 提供MCP服务管理、连接管理和工具调用的核心功能",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check": "biome check --write src/",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:debug": "VITEST_DEBUG=true vitest",
    "test:coverage:debug": "VITEST_DEBUG=true vitest --run --coverage",
    "coverage:open": "open coverage/index.html"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hub",
    "core"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "dependencies": {
    "@mcp-core/mcp-hub-share": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.23.8",
    "jsonata": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@vitest/coverage-v8": "2.1.9",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./utils/logger": {
      "types": "./dist/utils/logger.d.ts",
      "import": "./dist/utils/logger.js"
    },
    "./api-to-mcp": {
      "types": "./dist/api-to-mcp/index.d.ts",
      "import": "./dist/api-to-mcp/index.js"
    }
  }
}